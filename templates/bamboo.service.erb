[Unit]
Description=Atlassian Systemd Bamboo Service
After=syslog.target network.target

[Service]
Type=forking
Environment="JAVA_HOME=<%= @java_home %>"
Environment="UMASK=<%= @umask %>"
EnvironmentFile=-<%= @initconfig_path %>
PIDFile=<%= @appdir %>/work/catalina.pid
User=<%= @user %>
Group=<%= @group %>
ExecStart=<%= @appdir %>/bin/start-bamboo.sh
ExecStop=<%= @appdir %>/bin/stop-bamboo.sh

[Install]
WantedBy=multi-user.target
